<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucs.esporteconecta.view.window.UsuarioController"
      alignment="CENTER" prefHeight="600.0" prefWidth="900.0"
      stylesheets="@../css/usuario.css"
      styleClass="tela-fundo">

    <children>
        <HBox alignment="CENTER" spacing="5.0" >
            <children>
                <GridPane fx:id="gridpane" prefHeight="400.0" prefWidth="350.0" alignment="CENTER"
                          hgap="15" vgap="15" styleClass="quadro-fundo">
                    <padding>
                        <Insets left="40" right="40" top="40" bottom="40"/>
                    </padding>

                    <Label text="Informe seus dados"
                           GridPane.columnIndex="0" GridPane.rowIndex="0"
                           GridPane.columnSpan="1"
                           GridPane.halignment="CENTER"
                           styleClass="titulo-principal">
                        <GridPane.margin>
                            <Insets top="20" bottom="20"/>
                        </GridPane.margin>
                    </Label>

                    <RadioButton fx:id="campoLocatario"
                                 GridPane.columnIndex="0" GridPane.rowIndex="1"
                                 mnemonicParsing="false" text="Deseja alugar um espaço"
                                 onAction="#selectLocatario">
                        <toggleGroup>
                            <ToggleGroup fx:id="partsRadioButtons" />
                        </toggleGroup>
                    </RadioButton>

                    <RadioButton fx:id="campoLocador"
                                 GridPane.columnIndex="0" GridPane.rowIndex="2"
                                 mnemonicParsing="false" text="Deseja disponibilizar um espaço"
                                 onAction="#selectLocador" toggleGroup="$partsRadioButtons">
                    </RadioButton>

                    <TextField fx:id="campoRazaoSocial"
                               GridPane.columnIndex="0" GridPane.rowIndex="3" promptText="Razão Social">
                    </TextField>
                    <TextField fx:id="campoNome"
                               GridPane.columnIndex="0" GridPane.rowIndex="4" promptText="Nome Fantasia">
                    </TextField>
                    <TextField fx:id="campoDocumento"
                               GridPane.columnIndex="0" GridPane.rowIndex="5" promptText="Documento" >
                    </TextField>

                    <TextField fx:id="campoLogin"
                               GridPane.columnIndex="0" GridPane.rowIndex="6" promptText="Login" >
                    </TextField>

                    <PasswordField fx:id="campoSenha"
                                   GridPane.columnIndex="0" GridPane.rowIndex="7" promptText="Senha" >
                    </PasswordField>

                    <Button text="Criar Conta" styleClass="botao-form"
                            GridPane.columnIndex="0" GridPane.rowIndex="8"
                            onAction="#criarUsuario"
                            prefHeight="60.0" prefWidth="190.0">
                        <GridPane.margin>
                            <Insets top="20" bottom="20"/>
                        </GridPane.margin>
                    </Button>
                </GridPane>
            </children>
        </HBox>
    </children>
</VBox>
